XTerm*faceSize3: 12	! Medium
XTerm*faceSize4: 16	! Large
XTerm*faceSize5: 22	! Huge

! meta key fix for Emacs
XTerm.vt100.metaSendsEscape: true
XTerm*eightBitInput:	true
XTerm*eightBitOutput:  	true

! copy and paste
!XTerm*vt100.Translations:   override\n\
XTerm*vt100.Translations:  #override\n\
	Shift Ctrl <KeyPress> v:    insert-selection(CLIPBOARD)\n\
	Shift Ctrl <KeyPress> c:    copy-selection(CLIPBOARD)\n
	Shift <Key>Insert: 	    insert-selection(SECONDARY)\n\
	Ctrl  <Key>Insert:	    copy-selection(SECONDARY)\n
	Shift Insert:		    insert-selection(SELECT, CUT_BUFFER0) \n\

! clipboard
XTerm*selectToClipboard: true

! Colors
XTerm.termName: XTerm-256color
!vt100*colorMode: on
!vt100*boldColors: on
!vt100*dynamicColors: on

XTerm*vt100*colorMode: on
XTerm*vt100*boldColors: on
XTerm*vt100*dynamicColors:on

