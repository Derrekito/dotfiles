! XTerm -----------------------------------------------------------------------

! Lines of output that you can scroll back over
XTerm*saveLines: 4096
XTerm*highlightSelection: true

! Utf8 support
XTerm*utf8:		true
XTerm*utf8Fonts: 	true
XTerm*utf8-mode: 	true
XTerm*utf8-title: 	true

! fonts
! use command "xfontsel" to select fonts
!XTerm*font:           	-misc-hack-medium-r-normal-*-*-*-*-*-m-*-*-*
XTerm*faceName:       	Hack Nerd Font
!XTerm*vt100.geometry: 	80x25
XTerm*faceSize: 12
!XTerm*renderFont: true
XTerm.vt100.renderFont: true

! VT Font Menu: 
